<Window x:Class="Calculator.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="Calculator" 
        Height="910" Width="480"
        Background="#00193e"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="#00193e" 
                                BorderThickness="1" 
                                CornerRadius="50">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontFamily" Value="Bookman Old Style"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Name="ButtonGrid" Margin="-1,0,1,0">
        <Button x:Name="MenuButton"
                Content="☰"
                HorizontalAlignment="Left" 
                Height="40" 
                Margin="2,5,0,0" 
                VerticalAlignment="Top" 
                Width="43" 
                Background="#00193e" 
                Foreground="#ace1af"/>

        <Grid Name="DisplayGrid" Margin="10,82,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="110"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="EquationTextBlock"
               Grid.Row="0"
               Text=""
               FontSize="25"
               Foreground="White"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               TextWrapping="Wrap"
               Margin="0,0,10,0"/>

            <TextBlock x:Name="ResultTextBlock"
               Grid.Row="1"
               Text=""
               FontSize="40"
               FontWeight="Bold"
               Foreground="White"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               TextWrapping="Wrap"
               Margin="0,20,10,0"/>
        </Grid>

        <Button Content="MC"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="70" Height="36"
                Margin="15,266,0,0"
                FontSize="25"
                Background="#00193e"
                Foreground="#ace1af"/>
        <Button Content="MR"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="70" Height="36"
                Margin="90,266,0,0"
                FontSize="25"
                Background="#00193e"
                Foreground="#ace1af"/>
        <Button Content="M+"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="70" Height="36"
                Margin="166,266,0,0"
                FontSize="25"
                Background="#00193e"
                Foreground="#ace1af"/>
        <Button Content="M-"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="70" Height="36"
                Margin="241,266,0,0"
                FontSize="25"
                Background="#00193e"
                Foreground="#ace1af"/>
        <Button Content="MS"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="70" Height="36"
                Margin="316,266,0,0"
                FontSize="25"
                Background="#00193e"
                Foreground="#ace1af"/>
        <Button x:Name="MemoryButton" Content="M˅"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="70" Height="36"
                Margin="391,266,0,0"
                FontSize="25"
                Background="#00193e"
                Foreground="#ace1af"/>

        <Grid HorizontalAlignment="Center"
              Height="590"
              Margin="0,283,0,0"
              VerticalAlignment="Top"
              Width="450">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="23*"/>
            </Grid.ColumnDefinitions>

            <Button Content="%"
                    Width="80" Height="80"
                    Margin="10,38,0,0"
                    VerticalContentAlignment="Center"
                    Background="#1dacd6"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" Grid.ColumnSpan="2"/>
            <Button Content="CE"
                    Width="80" Height="80"
                    Margin="86,38,0,0"
                    VerticalContentAlignment="Center"
                    Background="#1dacd6"
                    FontWeight="Medium"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" Grid.Column="1"/>
            <Button Content="CLR"
                    Width="80" Height="80"
                    Margin="198,38,0,0"
                    VerticalContentAlignment="Center"
                    Background="#1dacd6"
                    FontWeight="Medium"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" Grid.Column="1" FontSize="28"/>
            <Button Content="⌫"
                    Width="80" Height="80"
                    Margin="310,38,0,0"
                    VerticalContentAlignment="Center"
                    Background="#2f847c"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" Grid.Column="1"/>

            <Button Content="⅟𝑥"
                    Width="80" Height="80"
                    Margin="0,130,360,0"
                    VerticalContentAlignment="Center"
                    Background="#1dacd6"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" Grid.ColumnSpan="2"/>
            <Button Content="𝑥²"
                    Width="80" Height="80"
                    Margin="86,130,0,0"
                    VerticalContentAlignment="Center"
                    Background="#1dacd6"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Grid.Column="1"/>
            <Button Content="√𝑥"
                    Width="80" Height="80"
                    Margin="198,130,0,0"
                    VerticalContentAlignment="Center"
                    Background="#1dacd6"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Grid.Column="1"/>
            <Button Content="÷"
                    Width="80" Height="80"
                    Margin="310,130,0,0"
                    VerticalContentAlignment="Center"
                    Background="#2f847c"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Grid.Column="1"/>

            <Button Content="7"
                    Width="80" Height="80"
                    Margin="10,222,0,0"
                    VerticalContentAlignment="Center"
                    Background="#04578e"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Grid.ColumnSpan="2"/>
            <Button Content="8"
                    Width="80" Height="80"
                    Margin="86,222,0,0"
                    VerticalContentAlignment="Center"
                    Background="#04578e"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Grid.Column="1"/>
            <Button Content="9"
                    Width="80" Height="80"
                    Margin="198,222,0,0"
                    VerticalContentAlignment="Center"
                    Background="#04578e"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Grid.Column="1"/>
            <Button Content="×"
                    Width="80" Height="80"
                    Margin="310,222,0,0"
                    VerticalContentAlignment="Center"
                    Background="#2f847c"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Grid.Column="1"/>

            <Button Content="4"
                    Width="80" Height="80"
                    Margin="10,314,0,0"
                    VerticalContentAlignment="Center"
                    Background="#04578e"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Grid.ColumnSpan="2"/>
            <Button Content="5"
                    Width="80" Height="80"
                    Margin="86,314,0,0"
                    VerticalContentAlignment="Center"
                    Background="#04578e"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Grid.Column="1"/>
            <Button Content="6"
                    Width="80" Height="80"
                    Margin="198,314,0,0"
                    VerticalContentAlignment="Center"
                    Background="#04578e"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Grid.Column="1"/>
            <Button Content="−"
                    Width="80" Height="80"
                    Margin="310,314,0,0"
                    VerticalContentAlignment="Center"
                    Background="#2f847c"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Grid.Column="1"/>

            <Button Content="1"
                    Width="80" Height="80"
                    Margin="10,406,0,0"
                    VerticalContentAlignment="Center"
                    Background="#04578e"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Grid.ColumnSpan="2"/>
            <Button Content="2"
                    Width="80" Height="80"
                    Margin="86,406,0,0"
                    VerticalContentAlignment="Center"
                    Background="#04578e"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Grid.Column="1"/>
            <Button Content="3"
                    Width="80" Height="80"
                    Margin="198,406,0,0"
                    VerticalContentAlignment="Center"
                    Background="#04578e"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Grid.Column="1"/>
            <Button Content="+"
                    Width="80" Height="80"
                    Margin="310,406,0,0"
                    VerticalContentAlignment="Center"
                    Background="#2f847c"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Grid.Column="1"/>

            <Button Content="±"
                    Width="80" Height="80"
                    Margin="10,498,0,0"
                    VerticalContentAlignment="Center"
                    Background="#04578e"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Grid.ColumnSpan="2"/>
            <Button Content="0"
                    Width="80" Height="80"
                    Margin="86,498,0,0"
                    VerticalContentAlignment="Center"
                    Background="#04578e"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Grid.Column="1"/>
            <Button Content="."
                    Width="80" Height="80"
                    Margin="198,498,0,0"
                    VerticalContentAlignment="Center"
                    Background="#04578e"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Grid.Column="1"/>
            <Button Content="="
                    Width="80" Height="80"
                    Margin="310,498,0,0"
                    VerticalContentAlignment="Center"
                    Background="#2f847c"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Grid.Column="1"/>
        </Grid>

        <TextBlock Text="Standard"
                   FontSize="18" 
                   FontWeight="Bold" 
                   Foreground="#ace1af" 
                   Margin="50,0,300,835" 
                   VerticalAlignment="Bottom"/>
    </Grid>
</Window>
