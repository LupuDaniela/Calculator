<Window x:Class="Calculator.View.ProgrammerMode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="Programmer" 
        Height="920" Width="480"
        Background="#00193e"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="#00193e"
                                BorderThickness="1"
                                CornerRadius="50">
                            <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontFamily" Value="Bookman Old Style"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Name="ButtonGrid" Margin="-1,0,1,0">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>

        <Button x:Name="MenuButton"
                Content="☰"
                HorizontalAlignment="Left"
                Height="40"
                Margin="2,5,0,0"
                VerticalAlignment="Top"
                Width="43"
                Background="#00193e"
                Foreground="#ace1af"/>

        <Grid Name="DisplayGrid" Margin="10,82,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="110"/>
            </Grid.RowDefinitions>

        <TextBlock x:Name="EquationTextBlock"
       Grid.Row="0"
       Text=""
       FontSize="25"
       Foreground="White"
       HorizontalAlignment="Right"
       VerticalAlignment="Bottom"
       TextWrapping="Wrap"
       Margin="0,0,10,0"/>

            <TextBlock x:Name="ResultTextBlock"
       Grid.Row="1"
       Text=""
       FontSize="40"
       FontWeight="Bold"
       Foreground="White"
       HorizontalAlignment="Right"
       VerticalAlignment="Center"
       TextWrapping="Wrap"
       Margin="0,20,10,0"/>
        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,260,0,0" Height="30" Width="280">
            <Button x:Name="BinButton" Content="BIN" Width="60" Height="30" Margin="5,0" Background="#1dacd6" FontSize="14"/>
            <Button x:Name="OctButton" Content="OCT" Width="60" Height="30" Margin="5,0" Background="#1dacd6" FontSize="14"/>
            <Button x:Name="DecButton" Content="DEC" Width="60" Height="30" Margin="5,0" Background="#1dacd6" FontSize="14"/>
            <Button x:Name="HexButton" Content="HEX" Width="60" Height="30" Margin="5,0" Background="#1dacd6" FontSize="14"/>
        </StackPanel>

        <Button Content="MC"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="70" Height="36"
                Margin="15,305,0,0"
                FontSize="25"
                Background="#00193e"
                Foreground="#ace1af"/>
        <Button Content="MR"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="70" Height="36"
                Margin="90,305,0,0"
                FontSize="25"
                Background="#00193e"
                Foreground="#ace1af"/>
        <Button Content="M+"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="70" Height="36"
                Margin="165,305,0,0"
                FontSize="25"
                Background="#00193e"
                Foreground="#ace1af"/>
        <Button Content="M-"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="70" Height="36"
                Margin="240,305,0,0"
                FontSize="25"
                Background="#00193e"
                Foreground="#ace1af"/>
        <Button Content="MS"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="70" Height="36"
                Margin="315,305,0,0"
                FontSize="25"
                Background="#00193e"
                Foreground="#ace1af"/>
        <Button x:Name="MemoryButton" Content="M˅"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="70" Height="36"
                Margin="395,305,0,0"
                FontSize="25"
                Background="#00193e"
                Foreground="#ace1af"/>


        <Grid HorizontalAlignment="Center"
              Height="550"
              Margin="0,283,0,0"
              VerticalAlignment="Bottom"
              Width="450">

            <Grid.RowDefinitions>
                <RowDefinition Height="90"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="90"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Content="A"
            Grid.Row="0" Grid.Column="0"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#04578e"/>
            <Button Content="B"
            Grid.Row="1" Grid.Column="0"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#04578e" RenderTransformOrigin="0.446,-0.55"/>
            <Button Content="("
            Grid.Row="1" Grid.Column="1"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#1dacd6" RenderTransformOrigin="0.476,1.238"/>
            <Button Content=")" 
            Grid.Row="1" Grid.Column="2"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#1dacd6"/>

            <Button Content="C"
            Grid.Row="2" Grid.Column="0"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#04578e" RenderTransformOrigin="0.521,-0.461"/>
            <Button Content="D"
            Grid.Row="3" Grid.Column="0"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#04578e" RenderTransformOrigin="0.623,0.309"/>
            <Button Content="%"
            Grid.Row="1" Grid.Column="3"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#1dacd6" FontWeight="Medium"/>
            <Button Content="⌫"
            Grid.Row="0" Grid.Column="4"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#2f847c"/>

            <Button Content="E"
            Grid.Row="4" Grid.Column="0"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#04578e" />
            <Button Content="F"
            Grid.Row="5" Grid.Column="0"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#04578e" RenderTransformOrigin="0.356,0.757"/>
            <Button Content="7"
            Grid.Row="2" Grid.Column="1"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#04578e"/>
            <Button Content="8"
            Grid.Row="2" Grid.Column="2"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#04578e"/>

            <Button Content="9"
            Grid.Row="2" Grid.Column="3"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#04578e"/>
            <Button Content="×"
            Grid.Row="2" Grid.Column="4"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#2f847c"  RenderTransformOrigin="0.501,1.133"/>
            <Button Content="4"
            Grid.Row="3" Grid.Column="1"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#04578e" RenderTransformOrigin="0.529,0.945"/>
            <Button Content="5"
            Grid.Row="3" Grid.Column="2"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#04578e"/>

            <Button Content="6"
            Grid.Row="3" Grid.Column="3"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#04578e"/>
            <Button Content="−"
            Grid.Row="3" Grid.Column="4"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#2f847c"/>
            <Button Content="1"
            Grid.Row="4" Grid.Column="1"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#04578e" RenderTransformOrigin="0.401,1.156"/>
            <Button Content="2"
            Grid.Row="4" Grid.Column="2"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#04578e"/>

            <Button Content="3"
            Grid.Row="4" Grid.Column="3"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#04578e"/>
            <Button Content="+"
            Grid.Row="4" Grid.Column="4"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#2f847c"/>
            <Button Content="±"
            Grid.Row="5" Grid.Column="1"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#04578e" RenderTransformOrigin="0.461,1.036"/>
            <Button Content="0"
            Grid.Row="5" Grid.Column="2"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#04578e"/>


            <Button Content="="
            Grid.Row="5" Grid.Column="4"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#2f847c" RenderTransformOrigin="0.506,0.225"/>
            <Button Content="÷" 
            Grid.Row="1" Grid.Column="4"
            Width="80" Height="80"
            Margin="10,10,0,0"
            Background="#2f847c"/>

            <Button x:Name="ClearButton" Content="CLR" Width="80" Height="80" Margin="10,10,0,0" Click="ClearButton_Click" Grid.Column="3" RenderTransformOrigin="0.491,0.265" VerticalAlignment="Top" FontSize="28" Background="#2f847c"/>


        </Grid>
        <TextBlock Text="Programmer"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#ace1af"
                   Margin="50,0,300,845"
                   VerticalAlignment="Bottom" Height="24"/>
    </Grid>
</Window>
